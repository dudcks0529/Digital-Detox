<?xml version="1.0" encoding="utf-8"?><ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- App Name -->
        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digital Detox Challenge"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Current Level -->
        <TextView
            android:id="@+id/tv_current_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 레벨: 실버"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_light" />

        <!-- Medal Transition -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Previous Level Medal -->
            <ImageView
                android:id="@+id/iv_previous_level"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_bronze" />

            <!-- Arrow Image -->
            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow"
                android:layout_marginHorizontal="16dp" />

            <!-- Current Level Medal -->
            <ImageView
                android:id="@+id/iv_current_level"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_silver" />
        </LinearLayout>

        <!-- Return Button -->
        <Button
            android:id="@+id/button_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="돌아가기"
            android:textSize="18sp"
            android:padding="12dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:layout_gravity="center_horizontal" />
    </LinearLayout></ScrollView>