<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- App Name -->
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digital Detox Challenge"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Current Level -->
    <TextView
        android:id="@+id/tv_current_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 레벨: 골드"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light" />

    <!-- Level Image List -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3"
        android:gravity="center">

        <!-- Bronze Level -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/iv_bronze"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_bronze"
                android:alpha="0.5" /> <!-- Default dimmed -->

            <TextView
                android:id="@+id/tv_level_bronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="브론즈"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" /> <!-- Default dimmed -->
        </LinearLayout>

        <!-- Silver Level -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/iv_silver"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_silver"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/tv_level_silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실버"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Gold Level -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/iv_gold"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_gold"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/tv_level_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="골드"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Platinum Level -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/iv_platinum"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_platinum"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/tv_level_platinum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="플래티넘"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Diamond Level -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/iv_diamond"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_diamond"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/tv_level_diamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다이아"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Challenger Level -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/iv_challenger"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_challenger"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/tv_level_challenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="챌린저"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </GridLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="돌아가기"
        android:textSize="18sp"
        android:padding="12dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
