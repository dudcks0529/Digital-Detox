<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#CCE4C3">

    <!-- 앱 이름 텍스트뷰 -->
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digital Detox Challenge"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- 현재 레벨 텍스트뷰 -->
    <TextView
        android:id="@+id/tv_current_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 레벨: 골드"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"/>

    <!-- 레벨 이미지 목록 -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3"
        android:gravity="center">

        <!-- 브론즈 레벨 이미지 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_bronze"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_bronze"
                android:layout_marginBottom="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="브론즈"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 실버 레벨 이미지 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_silver"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_silver"
                android:layout_marginBottom="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실버"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 골드 레벨 이미지 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_gold"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_gold"
                android:layout_marginBottom="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="골드"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 플래티넘 레벨 이미지 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_platinum"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_platinum"
                android:layout_marginBottom="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="플래티넘"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 다이아 레벨 이미지 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_diamond"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_diamond"
                android:layout_marginBottom="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다이아"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 챌린저 레벨 이미지 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_challenger"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/medal_challenger"
                android:layout_marginBottom="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="챌린저"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>

    </GridLayout>

    <!-- 돌아가기 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="돌아가기"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@drawable/button_background"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>